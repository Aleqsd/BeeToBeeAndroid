<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <View
            android:id="@+id/leHaut3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/primary_darker"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/leHaut"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/primary_darker"
            android:layout_below="@+id/leHaut3"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/leHaut2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/primary"
            android:layout_below="@+id/leHaut"
            android:layout_alignParentStart="true" />

        <ScrollView
            android:id="@+id/leBas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/leHaut2"
            android:background="@color/primary" >

            <TextView
                android:text="@string/LoremIpsum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView" />
        </ScrollView>

        <RelativeLayout
            android:id="@+id/info"
            android:layout_width="231dp"
            android:layout_height="136dp"
            android:adjustViewBounds="true"
            android:layout_marginStart="23dp"
            android:layout_below="@+id/leHaut3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/avatar"
                android:text="Alexandre DO-O ALMEIDA"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView1"
                android:layout_below="@+id/textView1"
                android:maxLines="1"
                android:text="Android / iOS Developer"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/avatar"
                app:civ_border_color="@color/primary_dark"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="10"
                app:civ_shadow_color="@color/primary_darker"
                android:id="@id/avatar"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

</RelativeLayout>